									{{user.prenom|capitalize}}
									{{user.nom|capitalize}}
								</a>
								<span class="badge badge-info d-block">ğŸ’¬</span>
							{% else %}
								{# affichage de base #}
								<a href="{{ path('arbre', {id: enfant.id, position: 'parent'}) }}">
									{{enfant.prenom|capitalize}}
									{{enfant.nom|capitalize}}
								</a>
								<span class="badge badge-info d-block">ğŸ’¬</span>
							{% endif %}

						</div>
					</div>
				{% endfor %}

			</div>

		{% endif %}

		<div class="btn btn-info mt-5 float-right">
			<a class="text-light" href="{{ path("listeMembres") }}">Retour Ã  la liste des membres</a>
