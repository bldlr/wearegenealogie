{% extends 'base.html.twig' %}

{% block title %}Genealogy
{% endblock %}
{% block monTitre %}Arbre de
	{{user.prenom|capitalize}}
{% endblock %}

{% block body %}

	<div class="container">


		<div class='row-parent-genealogie'>

			{% if position == 'parent' %}

				<div>
					<div class='cards-genealogie'>
						<a href="{{ path('arbre', {id: user.id}) }}?position=enfant">{{user.prenom|capitalize}}
							{{user.nom|capitalize}}</a>
					</div>
					<div class='cards-parent-trait'></div>
				</div>

				<div>
					<div class='cards-genealogie'>
						<a href="{{ path('arbre', {id: conjoint.id}) }}?position=enfant">{{conjoint.prenom|capitalize}}
							{{conjoint.nom|capitalize}}</a>
					</div>
					<div class='cards-parent-trait'></div>
				</div>

			{% elseif position == 'enfant' %}

				{% for parent in parents %}
					<div>
						<div class='cards-genealogie'>
							<a href="{{ path('arbre', {id: parent.id}) }}?position=enfant">{{parent.prenom|capitalize}}
								{{parent.nom|capitalize}}</a>
						</div>
						<div class='cards-parent-trait'></div>
					</div>
				{% endfor %}

			{% endif %}


		</div>

		<div class='trait-relation'></div>


		<div class='row-enfant-genealogie mb-5'>
			{% if position == 'parent' %}
				{% for enfant in enfants %}
					<div>
						<div class='cards-enfant-trait'></div>
						<div class='cards-genealogie'>
							<a href="{{ path('arbre', {id: enfant.user.id}) }}?position=parent">{{enfant.user.prenom|capitalize}}
								{{enfant.user.nom|capitalize}}</a>
						</div>
					</div>
				{% endfor  %}
			</div>
		{% elseif position == 'enfant' %}

			<div>
				<div class='cards-enfant-trait'></div>
				<div class='cards-genealogie'>
					<a href="{{ path('arbre', {id: user.id}) }}?position=parent">{{user.prenom|capitalize}}
						{{user.nom|capitalize}}</a>
				</div>
			</div>

		{% endif %}


		<div class="btn btn-info mt-5 float-right">
			<a class="text-light" href="{{ path("listeMembres") }}">Retour Ã  la liste des membres</a>
		</div>

	</div>
{% endblock %}
