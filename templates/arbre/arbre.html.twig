{% extends 'base.html.twig' %}

{% block title %}Genealogy
{% endblock %}
{% block monTitre %}
	{% if position == 'enfant' %}
		Ascendance
	{% else %}
		Descendance
	{% endif %}
	de
	{{user.prenom|capitalize}}
{% endblock %}

{% block body %}

	<div class="container">

		<div class='row-parent-genealogie'>

			{% for parent in parents %}

				<div>
					<div class='cards-genealogie'>

						{% if parent is null %}
							<a href="">Parent inconnu</a>
						{% else %}
							<a href="{{ path('arbre', {id: parent.id, position: 'enfant'}) }}">
								{{parent.prenom|capitalize}}
								{{parent.nom|capitalize}}
							</a>
							<span class="badge badge-info d-block">ğŸ’¬</span>
						{% endif %}

					</div>

					{# cette condition sert Ã  ne pas afficher le trait des parents si $user est en position parent et qu'il n'a pas d'enfant #}
					{% if not (position == 'parent' and enfants is null) %}
						<div class='cards-parent-trait'></div>
					{% endif %}

				</div>
			{% endfor %}

		</div>

		{# mÃªme idÃ©e que ligne 32, cette condition sert ici Ã  ne pas afficher la ligne des enfants si $user est en position parent et qu'il n'a pas d'enfant #}
		{% if not (position == 'parent' and enfants is null) %}

			<div class='trait-relation'></div>

			<div class='row-enfant-genealogie mb-5'>

				{% for enfant in enfants %}
					<div>
						<div class='cards-enfant-trait'></div>
						<div class='cards-genealogie'>

							{% if enfant is null and position == 'enfant' %}
								{# on rentre dans cette condition si on doit gÃ©nÃ©rer un arbre avec deux parents inconnus. On a dÃ©cidÃ© que pour l'instant il n'y a pas de fratrie possible s'il n'y a pas de parents en BDD #}
