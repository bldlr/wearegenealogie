{% extends 'base.html.twig' %}

{% block title %}Genealogy{% endblock %}
{% block monTitre %}Liste des personnes{% endblock %}

{% block body %}

<div class="container"> 

        {# <div class="m-4">

            <div class="row justify-content-center">
                {% for message in app.flashes('danger') %}
                    <div class="alert alert-danger col-2 text-center">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
        </div> #}


    {% include 'liste/_filter.html.twig' with {form: form} only %}

    <table class="table table-hover text-center">

        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de naissance</th>
                <th>Ville de naissance</th>
                <th>Pays de naissance</th>
                <th>Date de décès</th>
                <th>Lieu de décès</th>
                <th>Pays de décès</th>
            </tr>
        </thead>

        <tbody>
            {% for user in users %}
                <tr>
                    <td>
                        <a href="{{ path('arbre', {id: user.id}) }}?position=parent">
                        {% if user.nom == false %}
                            <span class="small font-italic">Non renseigné</span>
                        {% else %}
                            {{ user.nom|capitalize }}
                        {% endif %}
                        </a>
                    </td>
                    <td>
                    {% if user.prenom == false %}
                        <span class="small font-italic">Non renseigné</span>
                    {% else %}
                        {{ user.prenom|capitalize }}
                    {% endif %}
                    </td>
                    <td>{{user.dateNaissance|date("d/m/Y")}}</td>
                    <td>{{user.villeNaissance|capitalize}}</td>
                    <td>{{user.paysNaissance|capitalize}}</td>
                    <td>{{user.dateDeces|date("d/m/Y")}}</td>
                    <td>{{user.villeDeces|capitalize}}</td>
                    <td>{{user.paysDeces|capitalize}}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}



