{% extends 'base.html.twig' %}

{% block title %}Genealogy{% endblock %}
{% block monTitre %}Liste des personnes{% endblock %}

{% block body %}

<div class="container"> 

        <div class="m-4">
            <form method="GET" class="col-12 justify-content-center mx-auto input-group " action="{{ path("moteurDeRecherche") }}">
                <input class="form-control col-4" type="search" name="champs" placeholder="Recherche" aria-label="Search" >
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">Rechercher</button>
                </div>
            </form>
            <div class="row justify-content-center">
                {% for message in app.flashes('danger') %}
                    <div class="alert alert-danger col-2 text-center">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
        </div>


    <table class="table table-hover text-center">

        <thead>
            <tr>
                <th>Nom
                    <a href="{{ path("nomAz") }}">↑</a>
                    <a href="{{ path("nomZa") }}">↓</a>
                </th>
                <th>Prénom
                    <a href="{{ path("prenomAz") }}">↑</a>
                    <a href="{{ path("prenomZa") }}">↓</a>
                </th>
                <th>Date de naissance
                    <a href="{{ path("dateCroissante") }}">↑</a>
                    <a href="{{ path("dateDecroissante") }}">↓</a>
                </th>
                <th>Ville de naissance
                    <a href="{{ path("lieuAz") }}">↑</a>
                    <a href="{{ path("lieuZa") }}">↓</a>
                </th>
                <th>Pays de naissance</th>
                <th>Date de décès</th>
                <th>Lieu de décès</th>
                <th>Pays de décès</th>
            </tr>
        </thead>

        <tbody>
            {% for user in users %}
                <tr>
                    <td>
                        <a href="{{ path('arbre', {id: user.id}) }}?position=parent">
                        {% if user.nom == false %}
                            <span class="small font-italic">Non renseigné</span>
                        {% else %}
                            {{ user.nom|capitalize }}
                        {% endif %}
                        </a>
                    </td>
                    <td>
                    {% if user.prenom == false %}
                        <span class="small font-italic">Non renseigné</span>
                    {% else %}
                        {{ user.prenom|capitalize }}
                    {% endif %}
                    </td>
                    <td>{{user.dateNaissance|date("d/m/Y")}}</td>
                    <td>{{user.villeNaissance|capitalize}}</td>
                    <td>{{user.paysNaissance|capitalize}}</td>
                    <td>{{user.dateDeces|date("d/m/Y")}}</td>
                    <td>{{user.villeDeces|capitalize}}</td>
                    <td>{{user.paysDeces|capitalize}}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}



